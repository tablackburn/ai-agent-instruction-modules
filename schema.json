{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/tablackburn/ai-agent-instruction-modules/main/schema.json",
  "title": "AIM Configuration",
  "description": "Configuration schema for AI Agent Instruction Modules (AIM)",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "JSON Schema reference"
    },
    "version": {
      "type": "string",
      "description": "Configuration schema version",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "profile": {
      "type": ["string", "null"],
      "description": "Optional profile preset to use as base configuration",
      "enum": ["minimal", "web-developer", "python-developer", "full-stack", null]
    },
    "modules": {
      "type": "object",
      "description": "Module enable/disable configuration",
      "additionalProperties": {
        "oneOf": [
          {
            "type": "boolean",
            "description": "true to enable local module, false to disable"
          },
          {
            "type": "string",
            "enum": ["awesome-copilot"],
            "description": "Use awesome-copilot as fallback source"
          },
          {
            "type": "object",
            "description": "Module configuration with integrity verification",
            "properties": {
              "source": {
                "type": "string",
                "enum": ["awesome-copilot"],
                "description": "Source for the module"
              },
              "sha256": {
                "type": "string",
                "pattern": "^[a-fA-F0-9]{64}$",
                "description": "SHA256 hash of the module content for integrity verification"
              }
            },
            "required": ["source"]
          }
        ]
      }
    },
    "fallback": {
      "type": "object",
      "description": "Fallback source configuration for external modules",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether fallback fetching is enabled"
        },
        "source": {
          "type": "string",
          "format": "uri",
          "description": "GitHub repository URL for fallback modules"
        },
        "branch": {
          "type": "string",
          "description": "Git branch to fetch from"
        },
        "basePath": {
          "type": "string",
          "description": "Base path within the repository for instruction files"
        }
      },
      "required": ["enabled", "source", "branch", "basePath"]
    },
    "customInstructionsPath": {
      "type": ["string", "null"],
      "description": "Path to custom instructions file to append to AGENTS.md"
    }
  },
  "required": ["version", "modules"]
}
